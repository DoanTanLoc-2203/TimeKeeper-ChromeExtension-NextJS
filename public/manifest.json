{
  "manifest_version": 2,
  "name": "Timekeeper",
  "short_name": "Timekeeper",
  "version": "1.0.0",
  "description": "Timekeeper",
  "permissions": ["activeTab", "declarativeContent", "storage", "<all_urls>"],
  "browser_action": {
    "default_title": "Timekeeper",
    "default_popup": "index.html"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  }
}
